@using BoardGameApp.Web.ViewModels.Manager.GameSessions
@model GameSessionEditModel

@{
    ViewData["Title"] = "Edit Game Session";
}

<h2>Edit Game Session</h2>

<form asp-action="Edit" method="post" class="form-light">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="number" min="0" max="23" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="number" min="1" max="23" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxPlayers"></label>
        <input asp-for="MaxPlayers" class="form-control" type="number" min="1" max="100" />
        <span asp-validation-for="MaxPlayers" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BoardGameId"></label>
        <select asp-for="BoardGameId" asp-items="Model.BoardGames" class="form-control"></select>
        <span asp-validation-for="BoardGameId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClubId"></label>
        <select asp-for="ClubId" asp-items="Model.Clubs" class="form-control"></select>
        <span asp-validation-for="ClubId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}