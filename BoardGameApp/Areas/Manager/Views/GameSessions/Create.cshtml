@using BoardGameApp.Web.ViewModels.Manager.GameSessions
@model AddGameSessionViewModel
@{
    ViewData["Title"] = "Add Game Session";
}

<h2 class="text-center mb-4">Add Game Session</h2>

<div class="container mt-4" style="max-width: 600px;">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="StartHour" class="form-label"></label>
            <input asp-for="StartHour" class="form-control" placeholder="e.g. 14" />
            <span asp-validation-for="StartHour" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndHour" class="form-label"></label>
            <input asp-for="EndHour" class="form-control" placeholder="e.g. 16" />
            <span asp-validation-for="EndHour" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaxPlayers" class="form-label"></label>
            <input asp-for="MaxPlayers" class="form-control" placeholder="e.g. 6" />
            <span asp-validation-for="MaxPlayers" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BoardGameId" class="form-label"></label>
            <select asp-for="BoardGameId" asp-items="Model.AvailableBoardGames" class="form-select">
                <option value="">-- Select Board Game --</option>
            </select>
            <span asp-validation-for="BoardGameId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ClubId" class="form-label"></label>
            <select asp-for="ClubId" asp-items="Model.AvailableClubs" class="form-select">
                <option value="">-- Select Club --</option>
            </select>
            <span asp-validation-for="ClubId" class="text-danger"></span>
        </div>

        <div class="form-check form-switch mb-4">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Add Game Session</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
