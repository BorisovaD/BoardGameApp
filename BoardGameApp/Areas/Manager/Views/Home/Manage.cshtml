@{
    ViewData["Title"] = "Manager Dashboard";
}

<h1 class="text-center text-warning fw-bold mb-4">Welcome to the Manager Dashboard</h1>

<p class="text-center text-muted mb-5">Access all management features related to board games, sessions, tickets, and rankings.</p>

<div class="container" style="max-width: 900px;">

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">

        <div class="col">
            <div class="card shadow-sm border-0 h-100" style="min-width: 300px; min-height: 300px; padding: 40px; margin: auto;">
                <div class="card-body text-center">
                    <i class="bi bi-dice-5 text-primary display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage BoardGames</h5>
                    <p class="card-text text-muted">Edit the catalog of available games and genres.</p>
                    <a asp-controller="ClubBoardGames" asp-action="Catalog" class="btn btn-outline-primary fw-bold">
                        <i class="bi bi-pencil-square me-1"></i> Go to Catalog
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm border-0 h-100" style="min-width: 300px; min-height: 300px; padding: 40px; margin: auto;">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check text-success display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">GameSessions & Reservations</h5>
                    <p class="card-text text-muted">Organize board game sessions and track reservations.</p>
                    <a asp-controller="GameSessions" asp-action="Manage" class="btn btn-outline-success fw-bold">
                        <i class="bi bi-calendar-event me-1"></i> Manage Sessions
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm border-0 h-100" style="min-width: 300px; min-height: 300px; padding: 40px; margin: auto;">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-line text-warning display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">Game Rankings</h5>
                    <p class="card-text text-muted">Adjust game rankings and view popularity stats.</p>
                    <a asp-controller="GameRanking" asp-action="Manage" class="btn btn-outline-warning fw-bold">
                        <i class="bi bi-graph-up-arrow me-1"></i> View Rankings
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm border-0 h-100" style="min-width: 300px; min-height: 300px; padding: 40px; margin: auto;">
                <div class="card-body text-center">
                    <i class="bi bi-ticket-detailed text-danger display-4 mb-3"></i>
                    <h5 class="card-title fw-bold">Ticket Availability</h5>
                    <p class="card-text text-muted">Control ticket availability for each board game session.</p>
                    <a asp-controller="Reservations" asp-action="ManageTickets" class="btn btn-outline-danger fw-bold">
                        <i class="bi bi-ticket-perforated me-1"></i> Check Tickets
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>