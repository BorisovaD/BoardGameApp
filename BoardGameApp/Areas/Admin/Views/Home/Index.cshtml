<div class="container mt-5 mb-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-dark fw-bold">Welcome to the Admin Dashboard</h1>
        <p class="lead text-muted">Use the panels below to manage users, clubs, and board games in your application.</p>
    </div>

    <div class="card mb-4 border-0 shadow-sm rounded-4" style="background-color: #fffaf3;">
        <div class="card-body d-flex align-items-center justify-content-between flex-wrap p-4">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <i class="bi bi-people-fill text-warning display-4 me-4"></i>
                <div>
                    <h4 class="fw-bold mb-1">Manage Users</h4>
                    <p class="text-muted mb-0">View all registered users, assign roles, or remove users from the system.</p>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index"
               class="btn btn-warning fw-bold shadow-sm px-4 py-2" style="min-width: 240px;">
                <i class="bi bi-person-badge-fill me-2"></i> Go to Users
            </a>
        </div>
    </div>

    <div class="card mb-4 border-0 shadow-sm rounded-4" style="background-color: #f9fff7;">
        <div class="card-body d-flex align-items-center justify-content-between flex-wrap p-4">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <i class="bi bi-geo-alt-fill text-success display-4 me-4"></i>
                <div>
                    <h4 class="fw-bold mb-1">Manage Clubs</h4>
                    <p class="text-muted mb-0">Add new clubs, update club details, or delete existing ones.</p>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="ClubManagement" asp-action="Manage"
               class="btn btn-success fw-bold shadow-sm px-4 py-2" style="min-width: 240px;">
                <i class="bi bi-house-door-fill me-2"></i> Go to Clubs
            </a>
        </div>
    </div>

    <div class="card mb-4 border-0 shadow-sm rounded-4" style="background-color: #f0f8ff;">
        <div class="card-body d-flex align-items-center justify-content-between flex-wrap p-4">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <i class="bi bi-controller text-info display-4 me-4"></i>
                <div>
                    <h4 class="fw-bold mb-1">Manage BoardGames</h4>
                    <p class="text-muted mb-0">Edit the board game catalog by adding, updating, or deleting games.</p>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="BoardGames" asp-action="Index"
               class="btn btn-info fw-bold shadow-sm px-4 py-2 text-white" style="min-width: 240px;">
                <i class="bi bi-puzzle-fill me-2"></i> Go to BoardGames
            </a>
        </div>
    </div>
</div>