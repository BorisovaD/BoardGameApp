@using BoardGameApp.Web.ViewModels.Admin.ClubManagement
@model IEnumerable<ClubManagementIndexViewModel>
@{
    ViewData["Title"] = "Manage Clubs";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-success fw-bold">
        <i class="bi bi-geo-alt-fill text-success display-4 me-4"></i> Manage Clubs
    </h1>
    <p class="text-center text-muted">View, edit, or delete board game clubs across cities.</p>

    <div class="d-flex justify-content-between mb-4">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Create" class="btn btn-success fw-bold shadow">
            <i class="bi bi-plus-circle"></i> Add New Club
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm" role="alert">
            <i class="bi bi-exclamation-circle"></i> No clubs added yet. Click "Add New Club" to get started.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var club in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border @(club.IsDeleted ? "border-danger" : "border-success") h-100">
                        <div class="card-body">
                            <h5 class="card-title text-success fw-bold">
                                @club.ClubName
                                @if (club.IsDeleted)
                                {
                                    <span class="badge bg-danger ms-2">Deleted</span>
                                }
                            </h5>

                            <p class="card-text text-muted mb-1">
                                <i class="bi bi-geo-alt-fill"></i> @club.CityName
                            </p>

                            @if (!string.IsNullOrEmpty(club.ManagerName))
                            {
                                <p class="card-text text-muted mb-0">
                                    <i class="bi bi-person-fill"></i> Manager: @club.ManagerName
                                </p>
                            }
                        </div>

                        <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@club.Id" class="btn btn-outline-primary btn-sm fw-bold">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <form asp-action="ToggleDelete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@club.Id" />
                                <button type="submit" class="btn @(club.IsDeleted ? "btn-success" : "btn-danger") btn-sm">
                                    @(club.IsDeleted ? "Restore" : "Delete")
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>