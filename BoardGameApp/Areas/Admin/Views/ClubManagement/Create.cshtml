@using BoardGameApp.Web.ViewModels.Admin.ClubManagement
@model ClubManagementCreateInputModel
@{
    ViewData["Title"] = "Add New Club";
}

<div class="container mt-4">
    <h1 class="text-center text-success fw-bold mb-4">Add New Club</h1>

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">

            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="ClubName" class="form-label fw-semibold"></label>
                    <input asp-for="ClubName" class="form-control" />
                    <span asp-validation-for="ClubName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-semibold"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CityName" class="form-label fw-semibold"></label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>                

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary fw-bold">
                        <i class="bi bi-arrow-left"></i> Back to Clubs
                    </a>
                    <button type="submit" class="btn btn-success fw-bold">
                        <i class="bi bi-plus-circle"></i> Add Club
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}