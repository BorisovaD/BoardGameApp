@using BoardGameApp.Web.ViewModels.Admin.BoardGameManagement
@using BoardGameApp.Web.ViewModels.BoardGame
@model AddBoardGameInputModel
@{
    ViewData["Title"] = "Add BoardGame";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="BoardGameManagement" asp-action="Create" method="post">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Title" class="form-label-add-edit">BoardGame Title</label>
                    <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>                
            </div>

            <label class="form-label-add-edit">Select Categories</label>
            <div class="row">
                @foreach (var category in Model.Categories)
                {
                    <div class="form-check col-6">
                        <input class="form-check-input" type="checkbox"
                               name="SelectedCategoryIds"
                               value="@category.Id"
                               id="category_@category.Id"
                        @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                        <label class="form-check-label" for="category_@category.Id">@category.Name</label>
                    </div>
                }
            </div>
            <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.RulesUrl" class="form-label-add-edit">Rules URL</label>
                <input asp-for="@Model.RulesUrl" class="form-control" aria-required="false" placeholder="Enter rules URL (optional)" />
                <span asp-validation-for="@Model.RulesUrl" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="MinPlayers" class="form-label-add-edit">MinPlayers</label>
                <input asp-for="MinPlayers" class="form-control" aria-required="true" />
                <span asp-validation-for="MinPlayers" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="MaxPlayers" class="form-label-add-edit">MaxPlayers</label>
                <input asp-for="MaxPlayers" class="form-control" aria-required="true" />
                <span asp-validation-for="MaxPlayers" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Duration" class="form-label-add-edit">Duration</label>
                <input asp-for="Duration" class="form-control" aria-required="true" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-info w-100 py-2 fw-bold rounded">
                <i class="fas fa-save"></i> Save
            </button>
        </form>
    </div>
</div>
