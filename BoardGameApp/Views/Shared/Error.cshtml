@using BoardGameApp.Web.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "Unexpected Error";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg text-center p-4" style="max-width: 500px; background-color: rgba(255,255,255,0.9); border-radius: 1rem;">
        <h1 class="display-3 fw-bold text-danger">500</h1>
        <h2 class="mb-3"><b>Oops! Something went wrong.</b></h2>
        <p class="mb-4">
            An unexpected error occurred while processing your request.<br />
            Please try again later or contact support.
        </p>

        @if (Model?.ShowRequestId == true)
        {
            <p>
                <small><strong>Request ID:</strong> <code>@Model.RequestId</code></small>
            </p>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
            🎲 Back to Home
        </a>
    </div>
</div>
