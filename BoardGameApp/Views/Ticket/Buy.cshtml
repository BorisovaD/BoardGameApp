@using BoardGameApp.Web.ViewModels.Ticket
@model BuyTicketViewModel

@{
    ViewData["Title"] = "Buy Ticket";
}

<h2 class="text-center text-success mb-4">🎟️ Buy Ticket - @Model.GameTitle</h2>

<div class="card shadow p-4 mx-auto" style="max-width: 500px;">
    <form asp-action="Buy" method="post">
        <input type="hidden" asp-for="GameSessionId" />

        <div class="mb-3">
            <label class="form-label fw-bold">@Model.AvailableTickets tickets available</label>
        </div>

        <div class="mb-3">
            <label asp-for="TicketsToBuy" class="form-label"></label>
            <input asp-for="TicketsToBuy" class="form-control" />
            <span asp-validation-for="TicketsToBuy" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-controller="GameSessions" asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-success">Confirm Purchase</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
