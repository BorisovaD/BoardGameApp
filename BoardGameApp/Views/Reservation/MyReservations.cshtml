@using BoardGameApp.Web.ViewModels.Reservation
@model IEnumerable<ReservationIndexViewModel>

@{
    ViewData["Title"] = "My Reservations";
}

<h2 class="mb-4">My Reservations</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You don't have any reservations yet.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var reservation in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@reservation.ImageUrl" class="card-img-top" alt="@reservation.BoardGameTitle" style="height: 550px; object-fit: cover; padding:5px" />
                    <div class="card-body">
                        <h5 class="card-title">@reservation.BoardGameTitle</h5>
                        <p class="card-text mb-1">
                            <strong>Reservation Time:</strong> @reservation.ReservationTime.ToString("g")
                        </p>
                        <p class="card-text mb-3">
                            <strong>Session Start:</strong> @reservation.SessionStartTime?.ToString("g")
                        </p>
                        <p class="card-text mb-3">
                            <strong>Tickets:</strong> @reservation.Tickets
                        </p>
                        <a asp-controller="Ticket" asp-action="Details" asp-route-id="@reservation.TicketId" class="btn btn-primary">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
